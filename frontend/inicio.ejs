<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="../css/style.css">
    <title>Home</title>
    <style>
        * {
            margin: 0px;
            padding: 0px;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        body{
            width: 100%;
            display: flex;
            align-items: start;
            justify-content: start;
            flex-direction: column;
        }
        nav{
            width: 100%;
            height: 60px;
            background-color: blueviolet;
            display: flex;
            align-items: center;
            flex-direction: row;
            justify-content: center;
        }
        aside{
            background-color: blueviolet;
        }
        i{
            font-size: 35px;
            color: aliceblue;
            margin: 5px;

        }
        h1{
            color: aliceblue;
        }
        .bi-bell-fill{
            font-size: 22px;
        }
        main{
            background-color: rgb(255, 255, 255);
            width: 100%;
            min-height: 800px;
            display: flex;
            flex-direction: row;
        }
        .atalhos{
            width: 25%;
            min-height: 800px;
            border: 1px solid blueviolet;
        }
        .conteudo{
            width: 50%;
            min-height: 800px;
            border: 1px solid blueviolet;
        }
        .search{
            width: 25%;
            min-height: 800px;
            border: 1px solid blueviolet;
            display: flex;
            flex-direction: column;
        }
        .lista{
            width: 100%;
            height: 800px;
            display: flex;
            align-items: center;
            flex-direction: column;
        }
        a{
            text-decoration: none;
            color: white;
            font-size: 20px;
        }
        .button_inicio{
            width: 80%;
            height: 50px;
            color: blueviolet;
            background-color: #F0F0F0;
            border: 1px solid #F0F0F0;
            border-radius: 20px;
            font-weight: bold;
            font-size: 20px;
            transition: background-color 0.3s, color 0.3s;
        }
        .button_inicio:hover{
            background-color: blueviolet;
            color: #F0F0F0;
            font-weight: bold;
            border: 1px solid blueviolet;
        }
        .recado{
            width: 80%;
            height: 120px;
            color: blueviolet;
            background-color: #F0F0F0;
            border: 1px solid #F0F0F0;
            border-radius: 20px;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 20px;
            transition: background-color 0.3s, color 0.3s;
        }
        .recado:hover{
            background-color: blueviolet;
            color: #F0F0F0;
            font-weight: bold;
            border: 1px solid blueviolet;
        }
        .search2{
            width: 88%;
            height: 50px;
            color: blueviolet;
            background-color: #F0F0F0;
            border: 1px solid #F0F0F0;
            border-radius: 20px;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: end;
            font-size: 20px;
        }
        .nav2{
            width: 100%;
            height: 80px;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
        }
        .bi-search{
            color: blueviolet;
            font-size: 21px;
            margin: 5px;
        }
        .conteudo{
            width: 50%;
            height: calc(100vh - 60px);
            display: flex;
            flex-direction: column;
            overflow-y: auto;
        }
        .perfil{
            width: 80%;
            height: 80px;
            display: flex;
            flex-direction: row;
            align-items: center;
        }
        img{
            width: 50px;
            height: 50px;
            border: 1px solid black;
            border-radius: 100%;
            margin: 10px;
        }
        .texto{
            width: 100%;
            height: 40px;
            font-size: 20px;
        }
        p{
            position: relative;
            left: 70px;
            top: 5px;
        }
        .interact{
            width: 100%;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: start;
            flex-direction: row;
            border-bottom: 1px solid blueviolet;
        }
        .comentar{
            width: 87%;
            height: 30px;
            color: blueviolet;
            background-color: #F0F0F0;
            border: 1px solid #F0F0F0;
            border-radius: 20px;
            font-weight: bold;
            display: flex;
            position: relative;
            left: 10px;
            bottom: 10px;
            align-items: center;
            justify-content: end;
            font-size: 20px;
        }
        .bi-send{
            color: blueviolet;
            font-size: 20px;
            position: relative;
            left: 10px;
            bottom: 10px;
        }
        .bi-heart{
            color: blueviolet;
            font-size: 20px;
            position: relative;
            left: 15px;
            bottom: 10px;
        }
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
        }
        .modal-content {
            background-color: white;
            border-radius: 10px;
            width: 50%;
            height: 400px;
            padding: 50px;
            display: flex;
            align-items: center;
            flex-direction: column;
            justify-content: center;
        }
        .modal-close {
            top: 10px;
            right: 10px;
            cursor: pointer;
            font-size: 24px;
            color: #333;
            display: flex;
            flex-direction: column;
        }
        h2{
            margin: 10px;
        }
        .txtmodal{
            width: 210%;
            height: 100px;
            color: blueviolet;
            background-color: #F0F0F0;
            border: 1px solid #F0F0F0;
            border-radius: 20px;
            font-weight: bold;
            display: flex;
            align-items: center;
            justify-content: end;
            font-size: 20px;
        }
        .publicar{
            width: 100%;
            display: flex;
            align-items: start;
            flex-direction: column;
            justify-content: start;
            padding: 10px;
        }
        .fechar{
            width: 100%;
            display: flex;
            align-items: start;
            flex-direction: row;
            justify-content: end;
            height: 30px;
        }
        .button_postar{
            width: 80%;
            height: 50px;
            color: blueviolet;
            background-color: #F0F0F0;
            border: 1px solid #F0F0F0;
            border-radius: 20px;
            font-weight: bold;
            font-size: 20px;
            transition: background-color 0.3s, color 0.3s;
        }
        .button_postar:hover{
            background-color: blueviolet;
            color: #F0F0F0;
            font-weight: bold;
            border: 1px solid blueviolet;
        }
        h4{
            position: relative;
            top: 2px;
            left: 20px;
            color: #979797;
        }
        .perfil2{
            display: flex;
            flex-direction: row;
        }
        .row{
            width: 100%;
            height: 80px;
            display: flex;
            flex-direction: row;
        }
        .column{
            display: flex;
            flex-direction: column;
            width: 100%;
            height: 200px;
        }
        .row2{
            display: flex;
            flex-direction: row;
            width: 80%;
            height: 300px;
        }
    </style>
</head>
<body>
    <nav>
        <h1>N</h1>
    </nav>
    <main>
        <div class="atalhos">
            <div class="lista">
                <button onclick="window.location.href = '/perfil'" class="button_inicio">Perfil</button>
                <button onclick="window.location.href = '/notificacoes'" class="button_inicio">Notificações</button>
                <button onclick="window.location.href = '/logout'" class="button_inicio">Sair</button>
                <br>
                <button onclick="openModal()" class="button_inicio">Postar</button>
                <br>
                <br>
                <br>
                <div class="recado">Ajude a gente! Pix: <br>  (18) 99688-8438</div>
            </div>
        </div>
        <div class="conteudo">
            <% postagens.forEach(postagem => { %>
                <div class="perfil">
                    <img src="" alt="Foto de perfil">
                    <h2><%= postagem.nome_usuario %></h2>
                    <h4><%= ("0" + postagem.data_hora_post.getDate()).slice(-2) %>/<%= ("0" + (postagem.data_hora_post.getMonth() + 1)).slice(-2) %>/<%= postagem.data_hora_post.getFullYear() %></h4>
                </div>
                <div class="texto">
                    <p><%= postagem.conteudo_post %></p>
                </div>
                <br>
                <div class="interact">
                    <input class="comentar" type="text">
                    <i class="bi bi-send"></i>
                    <i class="bi bi-heart"></i>
                </div>
            <% }); %>
        </div>
        
        <div class="search">
                <div class="row">
                    <input class="search2" type="text"> <i class="bi bi-search"></i>
                </div>
                <div class="column">
                    <% postagens.forEach(postagem => { %>
                        <div class="row2">
                            <div class="perfil2">
                                <img src="" alt="Foto de perfil">
                                <h2><%= postagem.nome_usuario %></h2>
                            </div>
                        </div>
                        <% }); %>
                </div>
        </div>
    </main>
    <div id="modal" class="modal-overlay" style="display: none;">
        <div class="modal-content">
            <div class="fechar">
                <span class="modal-close" onclick="closeModal()">&times;</span>
            </div>
            <div class="publicar">
                <h2>Publicar</h2>
                <form id="formPublicar" action="/cadastro-publicacao" method="post">
                    <input class="txtmodal" type="text" name="txtmodal" id="txtmodal">
                    <input type="hidden" name="tipo_post" value="texto">
                    <input type="hidden" name="id_usuario" value="<%= userId  %>">
                    <button type="submit" class="button_postar">Postar</button>
                </form>
            </div>
        </div>
    </div>
    
    <script>
        function openModal() {
            document.getElementById('modal').style.display = 'flex';
        }
    
        function closeModal() {
            document.getElementById('modal').style.display = 'none';
        }
    
        document.getElementById('formPublicar').addEventListener('submit', function(event) {
            event.preventDefault(); 

            var conteudo = document.getElementById('txtmodal').value;
            if (conteudo.trim() !== '') {
                fetch('/cadastro-publicacao', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ conteudo: conteudo })
                })
                .then(response => response.json())
                .then(data => {
                    console.log(data);
                    closeModal();
                })
                .catch(error => {
                    console.error('Erro ao enviar publicação:', error);
                    alert('Erro ao enviar publicação. Tente novamente mais tarde.');
                });
            } else {
                alert('O campo de texto não pode estar vazio.');
            }
        });
    </script>
</body>
</html>